<div class="container">
    <div class="row">
      <div class="col-xs-8 col-sm-10 col-md-10">
        <h1>Dashboard</h1>
      </div>
    </div>

    <div class="row">
        <div class="col-sm-4 col-md-8">

       <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Correo electr√≥nico</th>
                <th scope="col">Rol</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <% if user.admin? %>
                        <td><%= link_to 'Administrador', users_path(user), method: :patch, class: "btn btn-info btn-xs" %></td>
                    <% else %>
                        <td><%= link_to 'Usuario', users_path(user), method: :patch, class: "btn btn-info btn-xs" %></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
        </table>


        </div>


    </div>
</div>
<br>